	<!-- ==================== AmmoSet ========================== -->

	<CombatExtended.AmmoSetDef>
		<defName>AmmoSet_22Short</defName>
		<label>.22 Short</label>
		<ammoTypes>
			<Ammo_22Short>Bullet_22Short</Ammo_22Short>
