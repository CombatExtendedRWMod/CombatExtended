      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Prometheum</li>
          </thingDefs>
        </filter>
        <count>5</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Component</li>
          </thingDefs>
        </filter>
        <count>2</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Steel</li>
        <li>Prometheum</li>
        <li>Component</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <Shell_Incendiary>5</Shell_Incendiary>
    </products>
  </RecipeDef>

  <RecipeDef ParentName="AmmoRecipeBase">
    <defName>MakeShell_EMP</defName>
    <label>make 81mm EMP mortar shells x5</label>
    <description>Craft 5 81mm EMP mortar shells.</description>
    <jobString>Making 81mm EMP mortar shells.</jobString>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Steel</li>
          </thingDefs>
        </filter>
        <count>22</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Component</li>
          </thingDefs>
        </filter>
        <count>7</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Steel</li>
        <li>Component</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <Shell_EMP>5</Shell_EMP>
    </products>
  </RecipeDef>
</Defs>
