  </ThingDef>

  <ThingDef Class="CombatExtended.AmmoDef" ParentName="6x18mmChargedBase">
    <defName>Ammo_6x18mmCharged_Ion</defName>
    <label>6x18mm Charged cartridge (Ion)</label>
    <graphicData>
      <texPath>Things/Ammo/Charged/Ion</texPath>
