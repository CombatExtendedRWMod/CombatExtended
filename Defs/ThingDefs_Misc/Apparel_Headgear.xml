<Defs>

    <ThingDef ParentName="ArmorHelmetMakeableBase">
        <defName>Apparel_Bascinet</defName>
        <label>bascinet</label>
        <description>A medieval helmet that provides full coverage of the head. Somewhat protective, but restricts the wearer's field of view which affects attack accuracy.</description>
        <graphicData>
            <texPath>Things/Apparel/Bascinet/Bascinet</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <stuffCategories>
            <li>Steeled</li>
        </stuffCategories>
        <costStuffCount>50</costStuffCount>
        <statBases>
            <WorkToMake>8000</WorkToMake>
            <MaxHitPoints>120</MaxHitPoints>
            <Mass>3.5</Mass>
            <Bulk>5</Bulk>
            <WornBulk>1</WornBulk>
            <StuffEffectMultiplierArmor>0.325</StuffEffectMultiplierArmor>
            <StuffEffectMultiplierInsulation_Cold>0.15</StuffEffectMultiplierInsulation_Cold>
            <StuffEffectMultiplierInsulation_Heat>0</StuffEffectMultiplierInsulation_Heat>
            <EquipDelay>4</EquipDelay>
        </statBases>
        <equippedStatOffsets>
			<AimingAccuracy>-0.4</AimingAccuracy>
            <MeleeHitChance>-2</MeleeHitChance>
		</equippedStatOffsets>
        <recipeMaker>
            <recipeUsers>
                <li>ElectricSmithy</li>
                <li>FueledSmithy</li>
            </recipeUsers>
            <researchPrerequisite>PlateArmor</researchPrerequisite>
            <skillRequirements>
                <Crafting>8</Crafting>
            </skillRequirements>
        </recipeMaker>
        <apparel>
            <bodyPartGroups>
                <li>FullHead</li>
            </bodyPartGroups>
            <wornGraphicPath>Things/Apparel/Bascinet/Bascinet</wornGraphicPath>
            <layers>
                <li>Overhead</li>
            </layers>
            <tags>
                <li>MedievalMilitary</li>
            </tags>
            <defaultOutfitTags>
                <li>Soldier</li>
            </defaultOutfitTags>
        </apparel>
    </ThingDef>

</Defs>
