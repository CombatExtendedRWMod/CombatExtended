<?xml version="1.0" encoding="utf-8" ?>
<Patch>

  <Operation Class="PatchOperationAdd">
    <xpath>Defs/PawnCapacityDef[defName="Breathing"]</xpath>
    <value>
      <labelMechanoids>heat exchange</labelMechanoids>
      <lethalMechanoids>true</lethalMechanoids>
    </value>
  </Operation>

  <Operation Class="PatchOperationAdd">
    <xpath>Defs/PawnCapacityDef[defName="Metabolism"]</xpath>
    <value>
      <labelMechanoids>coolant reservoir</labelMechanoids>
      <lethalMechanoids>true</lethalMechanoids>
    </value>
  </Operation>

  <Operation Class="PatchOperationRemove">
    <xpath>Defs/PawnCapacityDef[defName="Breathing" or defName="Metabolism"]/showOnMechanoids</xpath>
  </Operation>

</Patch>

