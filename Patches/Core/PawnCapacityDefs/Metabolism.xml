<?xml version="1.0" encoding="utf-8" ?>
<Patch>

  <!-- ========== Add entries if they don't exist already ========== -->

	<Operation Class="PatchOperationSequence">
  	<success>Always</success>
  	<operations>
    	<li Class="PatchOperationTest">
      	<xpath>//PawnCapacityDef[defName = "Metabolism"]/labelMechanoids</xpath>
      	<success>Invert</success>
    	</li>
    	<li Class="PatchOperationAdd">
      	<xpath>//PawnCapacityDef[defName = "Metabolism"]</xpath>
      	<value>
        	<labelMechanoids />
      	</value>
    	</li>
  	</operations>
	</Operation>

	<Operation Class="PatchOperationSequence">
  	<success>Always</success>
  	<operations>
    	<li Class="PatchOperationTest">
      	<xpath>//PawnCapacityDef[defName = "Metabolism"]/lethalMechanoids</xpath>
      	<success>Invert</success>
    	</li>
    	<li Class="PatchOperationAdd">
      	<xpath>//PawnCapacityDef[defName = "Metabolism"]</xpath>
      	<value>
        	<lethalMechanoids />
      	</value>
    	</li>
  	</operations>
	</Operation>

  <!-- ========== Patch values ========== -->

  <Operation Class="PatchOperationReplace">
    <xpath>//PawnCapacityDef[defName = "Metabolism"]/labelMechanoids</xpath>
    <value>
      <labelMechanoids>power generation</labelMechanoids>
    </value>
  </Operation>

  <Operation Class="PatchOperationReplace">
    <xpath>//PawnCapacityDef[defName = "Metabolism"]/lethalMechanoids</xpath>
    <value>
      <lethalMechanoids>true</lethalMechanoids>
    </value>
  </Operation>

  <Operation Class="PatchOperationReplace">
    <xpath>//PawnCapacityDef[defName = "Metabolism"]/showOnMechanoids</xpath>
    <value>
      <showOnMechanoids>true</showOnMechanoids>
    </value>
  </Operation>

</Patch>

