<?xml version="1.0" encoding="utf-8" ?>
<Patch>

  <!-- ========== Add statOffsets entry if it doesn't exist already ========== -->

	<Operation Class="PatchOperationSequence">
  	<success>Always</success>
  	<operations>
    	<li Class="PatchOperationTest">
      	<xpath>//HediffDef[defName = "GoJuiceHigh" or defName = "YayoHigh"]//stages/li[position()=1]</xpath>
      	<success>Invert</success>
    	</li>
    	<li Class="PatchOperationAdd">
      	<xpath>//HediffDef[defName = "GoJuiceHigh" or defName = "YayoHigh"]//stages/li[position()=1]</xpath>
      	<value>
        	<statOffsets />
      	</value>
    	</li>
  	</operations>
	</Operation>

  <!-- ========== Patch statOffsets ========== -->

  <Operation Class="PatchOperationAdd">
  	<xpath>//HediffDef[defName = "GoJuiceHigh"]//stages/li[position()=1]/statOffsets</xpath>
  	<value>
  		<Suppressability>-0.75</Suppressability>
  	</value>
  </Operation>

  <Operation Class="PatchOperationAdd">
  	<xpath>//HediffDef[defName = "YayoHigh"]//stages/li[position()=1]/statOffsets</xpath>
  	<value>
  		<Suppressability>-0.5</Suppressability>
  	</value>
  </Operation>

</Patch>

