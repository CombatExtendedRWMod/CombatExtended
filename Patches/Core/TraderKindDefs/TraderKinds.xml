        </thingDefCountRange>
      </li>
      <li Class="StockGenerator_Category">
        <categoryDef>Ammo</categoryDef>
        <thingDefCountRange>
          <min>0</min>
          <max>0</max>
        </thingDefCountRange>
      </li>
      <li Class="StockGenerator_Tag">
        <tradeTag>CE_Turret</tradeTag>
        <thingDefCountRange>
          <min>-2</min>
          <max>4</max>
        </thingDefCountRange>
        <countRange>
          <min>1</min>
          <max>2</max>
        </countRange>
      </li>
      <li Class="StockGenerator_Category">
        <categoryDef>WeaponsTurrets</categoryDef>
        <thingDefCountRange>
          <min>0</min>
          <max>0</max>
        </thingDefCountRange>
      </li>
		</value>
	</Operation>

</Patch>

