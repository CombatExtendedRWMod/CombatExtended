<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<Operation Class="PatchOperationReplace">
		<xpath>//ThingDef[defName="FilthFuel"]/thingClass</xpath>
		<value>
			<thingClass>CombatExtended.IncendiaryFuel</thingClass>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>//ThingDef[defName="FilthFuel"]/statBases/MaxHitPoints</xpath>
		<value>
			<MaxHitPoints>75</MaxHitPoints>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>//ThingDef[defName="FilthFuel"]//Flammability</xpath>
		<value>
			<Flammability>5</Flammability>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>//ThingDef[defName="FilthFuel"]//rainWashes</xpath>
		<value>
			<rainWashes>false</rainWashes>
		</value>
	</Operation>

</Patch>

