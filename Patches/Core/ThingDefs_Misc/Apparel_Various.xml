<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<!-- ========== Parka ========== -->

	<Operation Class="PatchOperationAdd">
		<xpath>*/ThingDef[defName="Apparel_Parka"]/statBases</xpath>
		<value>
			<Bulk>10</Bulk>
			<WornBulk>5</WornBulk>
    </value>
  </Operation>

  <Operation Class="PatchOperationRemove">
  	<xpath>*/ThingDef[defName="Apparel_Parka"]/equippedStatOffsets/WorkSpeedGlobal</xpath>
  </Operation>

  <Operation Class="PatchOperationRemove">
  	<xpath>*/ThingDef[defName="Apparel_Parka"]/equippedStatOffsets/MoveSpeed</xpath>
  </Operation>

	<!-- ========== Duster ========== -->

	<Operation Class="PatchOperationAdd">
		<xpath>*/ThingDef[defName="Apparel_Duster"]/statBases</xpath>
