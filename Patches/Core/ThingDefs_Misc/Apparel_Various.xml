    </value>
  </Operation>

  <Operation Class="PatchOperationRemove">
  	<xpath>*/ThingDef[defName="Apparel_Duster"]/equippedStatOffsets/MoveSpeed</xpath>
  </Operation>

	<!-- ========== Jacket ========== -->

