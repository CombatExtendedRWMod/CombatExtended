      	<success>Invert</success>
    	</li>
    	<li Class="PatchOperationAdd">
      	<xpath>//ThingDef[@Name="FurnitureBase"]/damageMultipliers</xpath>
      	<value>
        	<damageMultipliers />
      	</value>
    	</li>
  	</operations>
	</Operation>

	<Operation Class="PatchOperationAdd">
		<xpath>//ThingDef[@Name="FurnitureBase"]/damageMultipliers</xpath>
		<value>
			<li>
			  <damageDef>Bomb</damageDef>
			  <multiplier>2.4</multiplier>
			</li>
			<li>
			  <damageDef>Thermobaric</damageDef>
			  <multiplier>3.0</multiplier>
			</li>
			<li>
			  <damageDef>Bullet</damageDef>
			  <multiplier>0.5</multiplier>
			</li>
			<li>
			  <damageDef>Fragment</damageDef>
			  <multiplier>0.25</multiplier>
			</li>
			<li>
			  <damageDef>Arrow</damageDef>
			  <multiplier>0.1</multiplier>
			</li>
			<li>
			  <damageDef>Electrical</damageDef>
			  <multiplier>0.5</multiplier>
			</li>
		</value>
	</Operation>

	<!-- BuildingNaturalBase -->

	<Operation Class="PatchOperationSequence">
  	<success>Always</success>
  	<operations>
    	<li Class="PatchOperationTest">
      	<xpath>//ThingDef[@Name="BuildingNaturalBase"]/damageMultipliers</xpath>
      	<success>Invert</success>
    	</li>
    	<li Class="PatchOperationAdd">
      	<xpath>//ThingDef[@Name="BuildingNaturalBase"]/damageMultipliers</xpath>
      	<value>
        	<damageMultipliers />
      	</value>
    	</li>
  	</operations>
	</Operation>

	<Operation Class="PatchOperationAdd">
		<xpath>//ThingDef[@Name="BuildingNaturalBase"]/damageMultipliers</xpath>
		<value>
			<li>
			  <damageDef>Bomb</damageDef>
			  <multiplier>2</multiplier>
			</li>
			<li>
			  <damageDef>Thermobaric</damageDef>
			  <multiplier>2.5</multiplier>
			</li>
			<li>
			  <damageDef>Bullet</damageDef>
			  <multiplier>0.05</multiplier>
			</li>
			<li>
			  <damageDef>Fragment</damageDef>
			  <multiplier>0.025</multiplier>
			</li>
			<li>
			  <damageDef>Electrical</damageDef>
			  <multiplier>0.0</multiplier>
			</li>
		</value>
	</Operation>

</Patch>

