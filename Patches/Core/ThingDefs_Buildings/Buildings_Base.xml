<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<!-- ========== Patch bench recipes ========== -->

	<Operation Class="PatchOperationRemove">
		<xpath>//ThingDef[DefName = "TableMachining"]/recipes/li[. = "MakeMortarShell"]</xpath>
	</Operation>

	<!-- ========== Add damage resistance to buildings ========== -->

	<!-- BuildingBase -->

	<Operation Class="PatchOperationSequence">
  	<success>Always</success>
  	<operations>
    	<li Class="PatchOperationTest">
      	<xpath>//ThingDef[@Name="BuildingBase"]/damageMultipliers</xpath>
      	<success>Invert</success>
    	</li>
    	<li Class="PatchOperationAdd">
      	<xpath>//ThingDef[@Name="BuildingBase"]/damageMultipliers</xpath>
      	<value>
        	<damageMultipliers />
      	</value>
    	</li>
  	</operations>
	</Operation>

	<Operation Class="PatchOperationAdd">
		<xpath>//ThingDef[@Name="BuildingBase"]/damageMultipliers</xpath>
		<value>
			<li>
			  <damageDef>Bomb</damageDef>
			  <multiplier>1.2</multiplier>
			</li>
			<li>
			  <damageDef>Thermobaric</damageDef>
			  <multiplier>1.5</multiplier>
			</li>
			<li>
			  <damageDef>Bullet</damageDef>
			  <multiplier>0.25</multiplier>
			</li>
			<li>
			  <damageDef>Fragment</damageDef>
			  <multiplier>0.125</multiplier>
			</li>
			<li>
			  <damageDef>Arrow</damageDef>
			  <multiplier>0.05</multiplier>
			</li>
			<li>
			  <damageDef>Electrical</damageDef>
			  <multiplier>0.25</multiplier>
			</li>
		</value>
	</Operation>

	<!-- FurnitureBase -->

