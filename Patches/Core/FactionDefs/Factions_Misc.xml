<?xml version="1.0" encoding="utf-8" ?>
<Patch>

  <!-- ========== Patch mech raid delay and Centipede spawn weight ========== -->

  <Operation Class="PatchOperationReplace">
    <xpath>//FactionDef[defName = "Mechanoid"]/earliestRaidDays</xpath>
    <value>
      <MercenaryShieldBearer>60</MercenaryShieldBearer>
    </value>
  </Operation>

  <Operation Class="PatchOperationReplace">
    <xpath>//FactionDef[defName = "Mechanoid"]/pawnGroupMakers//li[1]/options/Centipede</xpath>
    <value>
      <Centipede>50</Centipede>
    </value>
  </Operation>

  <!-- ========== Remove all grenadiers ========== -->

  <Operation Class="PatchOperationRemove">
  	<xpath>//FactionDef[defName = "Outlander" or defName = "Pirate"]/pawnGroupMakers//GrenadierDestructive</xpath>
  </Operation>

  <Operation Class="PatchOperationRemove">
  	<xpath>//FactionDef[defName = "Outlander" or defName = "Pirate"]/pawnGroupMakers//GrenadierEMP</xpath>
  </Operation>

  <!-- ========== Add shield bearers ========== -->

  <!-- Outlanders -->
  <Operation Class="PatchOperationAdd">
  	<xpath>//FactionDef[defName = "Outlander"]/pawnGroupMakers//li[1]/options</xpath>
  	<value>
  		<MercenaryShieldBearer>100</MercenaryShieldBearer>
  	</value>
  </Operation>

  <Operation Class="PatchOperationAdd">
  	<xpath>//FactionDef[defName = "Outlander"]/pawnGroupMakers//li[2]/guards</xpath>
  	<value>
  		<MercenaryShieldBearer>70</MercenaryShieldBearer>
  	</value>
  </Operation>

  <Operation Class="PatchOperationAdd">
  	<xpath>//FactionDef[defName = "Outlander"]/pawnGroupMakers//li[3]/options</xpath>
  	<value>
  		<MercenaryShieldBearer>70</MercenaryShieldBearer>
  	</value>
  </Operation>

  <!-- Pirates -->
  <Operation Class="PatchOperationAdd">
  	<xpath>//FactionDef[defName = "Pirate"]/pawnGroupMakers//li[1]/options</xpath>
  	<value>
  		<MercenaryShieldBearer>70</MercenaryShieldBearer>
  	</value>
  </Operation>

  <Operation Class="PatchOperationAdd">
  	<xpath>//FactionDef[defName = "Pirate"]/pawnGroupMakers//li[2]/options</xpath>
  	<value>
  		<MercenaryShieldBearer>100</MercenaryShieldBearer>
  	</value>
  </Operation>

  <Operation Class="PatchOperationAdd">
  	<xpath>//FactionDef[defName = "Pirate"]/pawnGroupMakers//li[3]/options</xpath>
  	<value>
  		<MercenaryShieldBearer>70</MercenaryShieldBearer>
  	</value>
  </Operation>

  <!-- ========== Add machine gunners ========== -->

  <!-- Outlanders -->
  <Operation Class="PatchOperationAdd">
  	<xpath>//FactionDef[defName = "Outlander"]/pawnGroupMakers//li[1]/options</xpath>
  	<value>
  		<MercenaryMachineGunner>70</MercenaryMachineGunner>
  	</value>
  </Operation>

  <Operation Class="PatchOperationAdd">
  	<xpath>//FactionDef[defName = "Outlander"]/pawnGroupMakers//li[2]/guards</xpath>
  	<value>
  		<MercenaryMachineGunner>50</MercenaryMachineGunner>
  	</value>
  </Operation>

  <Operation Class="PatchOperationAdd">
  	<xpath>//FactionDef[defName = "Outlander"]/pawnGroupMakers//li[3]/options</xpath>
  	<value>
  		<MercenaryMachineGunner>50</MercenaryMachineGunner>
  	</value>
  </Operation>

  <!-- Pirates -->
  <Operation Class="PatchOperationAdd">
  	<xpath>//FactionDef[defName = "Pirate"]/pawnGroupMakers//li[1]/options</xpath>
  	<value>
  		<MercenaryMachineGunner>80</MercenaryMachineGunner>
  	</value>
  </Operation>

  <Operation Class="PatchOperationAdd">
  	<xpath>//FactionDef[defName = "Pirate"]/pawnGroupMakers//li[3]/options</xpath>
  	<value>
  		<MercenaryMachineGunner>80</MercenaryMachineGunner>
