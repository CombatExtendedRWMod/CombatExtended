<?xml version="1.0" encoding="utf-8" ?>
<Patch>

  <!-- ========== Patch raid point curves ========== -->

  <Operation Class="PatchOperationReplace">
    <xpath>Defs/FactionDef/maxPawnCostPerTotalPointsCurve</xpath>
    <value>
      <maxPawnCostPerTotalPointsCurve>
        <points>
          <li>(0,35)</li>
          <li>(70, 70)</li>
          <li>(100000, 100000)</li>
        </points>
      </maxPawnCostPerTotalPointsCurve>
    </value>
  </Operation>

  <!-- ========== Patch mech raid delay and Centipede spawn weight ========== -->

  <Operation Class="PatchOperationReplace">
    <xpath>Defs/FactionDef[defName="Mechanoid"]/earliestRaidDays</xpath>
    <value>
      <earliestRaidDays>60</earliestRaidDays>
    </value>
  </Operation>

  <Operation Class="PatchOperationReplace">
    <xpath>Defs/FactionDef[defName="Mechanoid"]/pawnGroupMakers/li[1]/options/Mech_Centipede</xpath>
    <value>
      <Mech_Centipede>50</Mech_Centipede>
    </value>
  </Operation>

  <!-- ========== Remove EMP grenadiers ========== -->

<!--
  <Operation Class="PatchOperationRemove">
  	<xpath>Defs/FactionDef[defName="OutlanderCivil" or defName="Pirate"]/pawnGroupMakers/li/*/GrenadierDestructive</xpath>
  </Operation>
-->

  <Operation Class="PatchOperationRemove">
  	<xpath>Defs/FactionDef[defName="OutlanderFactionBase" or defName="Pirate"]/pawnGroupMakers/li/*/Grenadier_EMP</xpath>
  </Operation>

  <!-- ========== Add tribal grenadies ========== -->

  <Operation Class="PatchOperationAdd"> <!-- Combat -->
    <xpath>Defs/FactionDef[@Name="TribeBase"]/pawnGroupMakers/li[1]/options</xpath>
    <value>
      <TribalGrenadier>10</TribalGrenadier>
      <TribalGunner>5</TribalGunner>
    </value>
  </Operation>
  
  <Operation Class="PatchOperationAdd"> <!-- Combat -->
