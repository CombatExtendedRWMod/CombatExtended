				<value>ResourceBase</value>
			</li>

			<!-- ====== Zygolophodon Tusk ====== -->
			
			<li Class="PatchOperationRemove">
				<xpath>Defs/ThingDef[defName="ZygolophodonTusk"]/tools</xpath>
			</li>

