<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<Operation Class="PatchOperationSequence">
		<success>Always</success>
		<operations>
			<li Class="ModCheck.isModLoaded">
				<modName>Apparello 2</modName>
				<yourMod>CombatExtended</yourMod>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>*/ThingDef[defName = "Apparello_Spacemarinepants"]/statBases</xpath>
				<value>
					<Bulk>20</Bulk>
					<WornBulk>5</WornBulk>
				</value>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>*/ThingDef[defName = "Apparello_Pollypocket"]/equippedStatOffsets/CarryingCapacity</xpath>
				<value>
					<CarryBulk>5</CarryBulk>
				</value>
			</li>
		</operations>
	</Operation>

</Patch>

