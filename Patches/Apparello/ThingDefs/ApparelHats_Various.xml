<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<Operation Class="PatchOperationSequence">
		<success>Always</success>
		<operations>
			<li Class="ModCheck.isModLoaded">
				<modName>Apparello 2</modName>
				<yourMod>CombatExtended</yourMod>
			</li>
			<!-- ========== Tac-team headcover ========== -->
			<li Class="PatchOperationReplace">
				<xpath>*/ThingDef[defName = "Apparello_Cyninja" or defName = "Apparello_Cybissar"]/equippedStatOffsets/ShootingAccuracy</xpath>
				<value>
					<AimingAccuracy>0.05</AimingAccuracy>
				</value>
			</li>
			<!-- ========== Medic helmet ========== -->
			<li Class="PatchOperationAdd">
				<xpath>*/ThingDef[defName = "Apparello_Medihelmet"]/statBases</xpath>
				<value>
					<Bulk>5</Bulk>
				</value>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>*/ThingDef[defName = "Apparello_Medihelmet"]/statBases/ArmorRating_Blunt</xpath>
				<value>
					<ArmorRating_Blunt>0.2</ArmorRating_Blunt>
				</value>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>*/ThingDef[defName = "Apparello_Medihelmet"]/statBases/ArmorRating_Sharp</xpath>
				<value>
					<ArmorRating_Sharp>0.55</ArmorRating_Sharp>
				</value>
			</li>
			<li Class="PatchOperationRemove">
				<xpath>*/ThingDef[defName = "Apparello_Medihelmet"]/equippedStatOffsets/MoveSpeed</xpath>
			</li>
			<!-- ========== Nerve enhancer ========== -->
			<li Class="PatchOperationAdd">
				<xpath>*/ThingDef[defName = "Apparello_Proto" or defName = "Apparello_ProtoFin"]/statBases</xpath>
				<value>
					<Bulk>5</Bulk>
				</value>
			</li>
			<!-- ========== Misc ========== -->
			<li Class="PatchOperationAdd">
				<xpath>*/ThingDef[defName = "Apparello_Wendywelder" or defName = "Apparello_Hardhat" or defName = "Apparello_Moron"]/statBases</xpath>
				<value>
					<Bulk>5</Bulk>
				</value>
			</li>
		</operations>
	</Operation>

</Patch>

