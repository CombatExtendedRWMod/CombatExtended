<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<Operation Class="PatchOperationSequence">
		<success>Always</success>
		<operations>
			<li Class="CombatExtended.PatchOperationFindMod">
				<modName>Apparello 2</modName>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName = "Apparello_Syndicatellorare"]/statBases</xpath>
				<value>
					<Bulk>20</Bulk>
					<WornBulk>5</WornBulk>
				</value>
			</li>
			<!-- ========== Prototype armors ========== -->
			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName = "Apparello_Scytherframe"]/equippedStatOffsets</xpath>
				<value>
					<ReloadSpeed>0.2</ReloadSpeed>
				</value>
			</li>
			<li Class="PatchOperationRemove">
				<xpath>Defs/ThingDef[defName = "Apparello_HiveArmor" or defName = "Apparello_Steamhull"]/equippedStatOffsets</xpath>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName = "Apparello_HiveArmor" or defName = "Apparello_Steamhull"]/statBases</xpath>
				<value>
					<Bulk>100</Bulk>
					<WornBulk>25</WornBulk>
				</value>
			</li>
			<!-- ========== Medium power armor ========== -->
			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName = "Apparello_GShellII"]/statBases</xpath>
				<value>
					<Bulk>20</Bulk>
					<WornBulk>5</WornBulk>
				</value>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName = "Apparello_GShellII"]/equippedStatOffsets/MoveSpeed</xpath>
				<value>
					<CarryWeight>10</CarryWeight>
				</value>
			</li>
		</operations>
	</Operation>

</Patch>

